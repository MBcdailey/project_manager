<nav class="navbar justify-content-end navbar-dark bg-dark">
  <form>
    <button class="btn btn-outline-info" type="button" data-toggle="modal" data-target="#newProjectModal">
      <span class="oi oi-plus" title="New Project" aria-hidden="true"></span>
    </button>
    <button class="btn btn-outline-info" type="button" onclick="location.href = '<%= root_path %>';">
      <span class="oi oi-x" title="Exit Project List" aria-hidden="true"></span>
    </button>
  </form>
</nav>
<div class="row header-row px-3 py-3 mb-5">
  <div class="col-12">
    <h1>Project List</h1>
  </div>
</div>
<div class="row task-row px-3 pb-3">
  <div class="col-12 py-2 border-bottom">
    <table class="table">
      <thead>
        <tr>
        <th scope="col">Project</th>
        <th scope="col">Total Tasks</th>
        <th scope="col">Unasigned Tasks</th>
        <th scope="col">Completed Tasks</th>
        <th scope="col">Project Creation</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
        <tr>
        <td><h3><a href="<%= project_path(project.id)%>"><%= project.title %></a></h3><p><%= project.description %></p></td>
        <td>2</td>
        <td>2</td>
        <td>0</td>
        <td><%= format_date_time(project.created_at) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
