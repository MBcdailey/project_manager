<div class="row header-row px-5 py-5">
  <h1>Project List</h1>
</div>

<% @projects.each do |project| %>
<div class="row project-row px-5 py-3">
  <div class="col-12">
    <h3><a href="<%= project_path(project.id)%>"><%= project.title %></a></h3>
    <p><%= project.description %></p>
    <p>Created: <%= format_date_time(project.created_at) %></p>
  </div>
</div>
<% end %>
