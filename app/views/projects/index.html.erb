<nav class="navbar justify-content-end navbar-dark bg-dark">
  <form>
    <button class="btn btn-outline-info" type="button" data-toggle="modal" data-target="#newProjectModal">
      <span class="oi oi-plus" title="New Project" aria-hidden="true"></span>
    </button>
    <button class="btn btn-outline-info" type="button" onclick="location.href = '<%= root_path %>';">
      <span class="oi oi-x" title="Exit Project List" aria-hidden="true"></span>
    </button>
  </form>
</nav>
<div class="row header-row px-3 py-3 mb-5">
  <div class="col-12">
    <h1>Project List</h1>
  </div>
</div>

<% @projects.each do |project| %>
<div class="row project-row px-3 pb-3">
  <div class="col-12 py-2 border-bottom">
    <h3><a href="<%= project_path(project.id)%>"><%= project.title %></a></h3>
    <p><%= project.description %></p>
    <p class="small">Created: <%= format_date_time(project.created_at) %></p>
  </div>
</div>
<% end %>
