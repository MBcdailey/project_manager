<nav class="navbar justify-content-end navbar-dark bg-dark">
  <form>
    <button class="btn btn-outline-info" type="button" onclick="location.href = '<%= edit_task_path @task.id %>';">
      <span class="oi oi-wrench" title="Edit task" aria-hidden="true"></span>
    </button>
    <button class="btn btn-outline-info" type="button" onclick="location.href = '<%= tasks_path %>';">
      <span class="oi oi-x" title="Exit task" aria-hidden="true"></span>
    </button>
  </form>
</nav>
<div class="row header-row px-3 pt-3 pb-5">
  <div class="col-10">
    <span class="x-small"><a href="<%= project_path @project.id %>"><%= @project.title %></a></span>
    <h1><%= @task.title %></h1>
    <p><%= @task.description %></p>
    <p class="small"><%= "Due: #{format_due_date(@task.due_date)}, " if !@task.due_date.nil? %>Created: <%= format_date_time(@task.created_at) %></p>
  </div>
  <div class="col-2">
    <p>..</p>
  </div>
</div>
