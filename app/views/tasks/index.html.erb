<nav class="navbar justify-content-end navbar-dark bg-dark">
  <form>
    <button class="btn btn-outline-info" type="button" data-toggle="modal" data-target="#newTaskModal">
      <span class="oi oi-plus" title="New task" aria-hidden="true"></span>
    </button>
    <button class="btn btn-outline-info" type="button" onclick="location.href = '<%= root_path %>';">
      <span class="oi oi-x" title="Exit Task List" aria-hidden="true"></span>
    </button>
  </form>
</nav>
<div class="row header-row px-3 py-3 mb-5">
  <div class="col-12">
    <h1>Task List</h1>
  </div>
</div>
<div class="row task-row px-3 pb-3">
  <div class="col-12 py-2 border-bottom">
    <table class="table">
      <thead>
        <tr>
        <th scope="col">Status</th>
        <th scope="col">Task</th>
        <th scope="col">Project</th>
        <th scope="col">Due Date</th>
        <th scope="col">Created Date</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
        <th scope="row">Unassigned</th>
        <td><h3><a href="<%= task_path(task.id)%>"><%= task.title %></a></h3><p><%= task.description %></p></td>
        <td><a href="<%= project_path task.project_id %>"><%= task.project_id %></a>
        <td><%= "#{format_due_date(task.due_date)}" if !task.due_date.nil? %></td>
        <td><%= format_date_time(task.created_at) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
